<li>
  <div class="Stripes">
  <%= 'Name'.humanize %>:
  <%= user.name %>
  <br>
  <%= 'Email'.humanize %>:
  <%=link_to user.email, user %>
  <br>
  <b><%= 'tasks_count'.humanize %>:</b>
  <%= user.tasks_count %>
  <br>  
  </div>
  <% if current_user.admin? && !current_user?(user)  %>
    <%= link_to "destroy", user, method: :delete,
                                  data: { confirm: "You sure?" }, class: "btn btn-danger" %>
  <% end %>
</li>

