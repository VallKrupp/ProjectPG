<p id="notice"><%= notice %></p>

<div id="taskID" style="display:none">
<%= @task.id %>
</div>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= markdown(@task.body) %>
</p>

<p>
  <strong>Answer:</strong>
  <%= render 'shared/answer' %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @task.user.username, @task.user %>
</p>

<%= link_to 'Edit', edit_task_path(@task), class: "btn btn-primary" %>
